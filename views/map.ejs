<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Mapa interactivo</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">  
  <style>
    body {
      font-family: sans-serif;
      margin: 0;
      padding: 1rem;
    }

    h1 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
    }

    .container {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
    }

    svg {
      max-width: 100%;
      height: auto;
      border: 1px solid #ccc;
    }

    table {
      border-collapse: collapse;
      font-size: 14px;
      width: 100%;
      max-width: 500px;
    }

    table, th, td {
      border: 1px solid #888;
      padding: 6px 10px;
    }

    th {
      background-color: #f2f2f2;
    }

    @media (max-width: 600px) {
      .container {
        flex-direction: column;
        align-items: center;
      }

      table {
        font-size: 13px;
      }
    }
  </style>
</head>
<body>
  <h1>Mapa de la nave</h1>
  <p>Bienvenido, <%= usuario.nombre %></p>

  <div class="container">
    <svg width="800" height="600" xmlns="http://www.w3.org/2000/svg">
      <image xlink:href="<%= mapa.imagen_url %>" width="800" height="600" />
      <% puntos.forEach(p => { %>
        <g id="punto-<%= p.id %>" class="tooltip-box" aria-label="Punto <%= p.nombre %>">
          <rect x="<%= p.x %>" y="<%= p.y %>" width="<%= p.ancho %>" height="<%= p.alto %>" fill="yellow" />
          <title>Sin revisión</title>
        </g>
      <% }) %>
    </svg>

    <table>
      <thead>
        <tr>
          <th>Punto</th>
          <th>Usuario (T1)</th>
          <th>Hora (T1)</th>
          <th>Usuario (T2)</th>
          <th>Hora (T2)</th>
        </tr>
      </thead>
      <tbody>
        <% revisiones.forEach(r => { %>
          <tr>
            <td><%= r.punto %></td>
            <td><%= r.usuario1 || '—' %></td>
            <td><%= r.hora1 ? new Date(r.hora1).toLocaleTimeString('es-ES', { hour: '2-digit', minute: '2-digit' }) : '—' %></td>
            <td><%= r.usuario2 || '—' %></td>
            <td><%= r.hora2 ? new Date(r.hora2).toLocaleTimeString('es-ES', { hour: '2-digit', minute: '2-digit' }) : '—' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script type="module" src="/js/actualizarEstados.js"></script>
</body>
</html>
